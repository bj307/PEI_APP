<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgLoadHome"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/logo_pei_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extralight"
            android:layout_marginTop="16dp"
            android:letterSpacing="1.1"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="@string/loadOpenTitle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:letterSpacing="0.1"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="@string/loadOpenTitleTwo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:paddingHorizontal="24dp"
        android:gravity="center">


            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="8"
                android:background="@color/white"/>

            <View
                android:layout_width="16dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/space_grotesk_medium"
                android:text="@string/connect" />

            <View
                android:layout_width="16dp"
                android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnConnectHome"
            style="@style/MyButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_circle_connect"
            android:contentDescription="@string/loadOpenTitle"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="67dp"
            android:minHeight="67dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:cornerRadius="33.5dp"
            app:icon="@drawable/link_add"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="34dp"
            tools:ignore="DuplicateSpeakableTextCheck" />
        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>